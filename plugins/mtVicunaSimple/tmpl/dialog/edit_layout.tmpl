<script type="text/javascript">
//<![CDATA[

//	$("#menu").css("display","none");

	var layoutClass ="single double double-l multi multi2 multi2-l set1 set2";
	var eyeCatchClass ="eye-h eye-hb eye-m eye-c eye-u set1 set2";
	var widthClass ="f800 f850 f900 f950 f1000 none";
	var otherClass ="al gt gh";
	var loadedPage ="index";
	var loadedIndexStyle ="<mt:var name="index_style">";
	var loadedEntryStyle ="<mt:var name="entry_style">";
	var loadedCategoryStyle ="<mt:var name="category_style">";
	var loadedMonthlyStyle ="<mt:var name="monthly_style">";
	var loadedArchiveStyle ="<mt:var name="archive_style">";
	var loadedIndexEyecatch ="<mt:var name="index_eyecatch">";
	var loadedEntryEyecatch ="<mt:var name="entry_eyecatch">";
	var loadedCategoryEyecatch ="<mt:var name="category_eyecatch">";
	var loadedMonthlyEyecatch ="<mt:var name="monthly_eyecatch">";
	var loadedArchiveEyecatch ="<mt:var name="archive_eyecatch">";
	var loadedWidth ="<mt:if name="fixed_width" ne="none"><mt:var name="fixed_width"></mt:if>";
	var loadedOthers ="<mt:if name="hide_navi">gh<mt:elseif name="navi_on_top">gt<mt:elseif name="left_align">al</mt:if>";
	var loadedCloud ="<mt:if name="cloud_style" ne="none"><mt:var name="cloud_style"></mt:if>";
	var vicuna_skin_layout ="<mt:var name="vicuna_skin_layout">";
	if (vicuna_skin_layout == "flat") {
		var skinType = "recent";
	} else if (vicuna_skin_layout == "galaxy") {
		var skinType = "recent";
	} else if (vicuna_skin_layout == "mono") {
		var skinType = "recent";
	} else if (vicuna_skin_layout == "vega") {
		var skinType = "recent";
	} else if (vicuna_skin_layout == "future") {
		var skinType = "future";
	} else if (vicuna_skin_layout == "bazooka") {
		var skinType = "design";
	} else if (vicuna_skin_layout == "warship") {
		var skinType = "design";
	}

// Layout

	function setLayout(type) {
		$("div.layout a").removeClass("on");
		if (type == 'default'){
			if (loadedPage == 'individual') {
				$('#iframe').contents().find('body').removeClass(layoutClass).addClass('single');
				$("div.layout a.single").addClass("on");
				$("#entry_style").val('single');
				loadedEntryStyle ='single';
			} else if (loadedPage == 'archive') {
				$('#iframe').contents().find('body').removeClass(layoutClass).addClass('single');
				$("div.layout a.single").addClass("on");
				$("#archive_style").val('single');
				loadedArchiveStyle = 'single';
			} else {
				$('#iframe').contents().find('body').removeClass(layoutClass).addClass('double');
				$("div.layout a.double").addClass("on");
				$("#"+loadedPage+"_style").val('double');
				if (loadedPage == "index") {
					loadedIndexStyle = 'double';
				} else if (loadedPage == "category") {
					loadedCategoryStyle = 'double';
				} else if (loadedPage == "monthly") {
					loadedMonthlyStyle = 'double';
				}
			}
		} else {
			$('#iframe').contents().find('body').removeClass(layoutClass).addClass(type);
			$("div.layout a."+type).addClass("on");
			if (loadedPage == "index") {
				loadedIndexStyle = type;
				$("#index_style").val(type);
			} else if (loadedPage == "individual") {
				loadedEntryStyle = type;
				$("#entry_style").val(type);
			} else if (loadedPage == "category") {
				loadedCategoryStyle = type;
				$("#category_style").val(type);
			} else if (loadedPage == "monthly") {
				loadedMonthlyStyle = type;
				$("#monthly_style").val(type);
			} else if (loadedPage == "archives") {
				loadedArchiveStyle = type;
				$("#archive_style").val(type);
			}
		}
		$("div.set a").removeClass("on");
	};

// Eye Catch

	function setEye(type) {
		$('#iframe').contents().find('body').removeClass(eyeCatchClass);
		if (type != 'e-clear') {
			$('#iframe').contents().find('body').addClass(type);
			if (loadedPage == "index") {
				loadedIndexEyecatch = type;
			} else if (loadedPage == "individual") {
				loadedEntryEyecatch = type;
			} else if (loadedPage == "category") {
				loadedCategoryEyecatch = type;
			} else if (loadedPage == "monthly") {
				loadedMonthlyEyecatch = type;
			} else if (loadedPage == "archives") {
				loadedArchiveEyecatch = type;
			}
		} else {
			if (loadedPage == "index") {
				loadedIndexEyecatch = '';
			} else if (loadedPage == "individual") {
				loadedEntryEyecatch = '';
			} else if (loadedPage == "category") {
				loadedCategoryEyecatch = '';
			} else if (loadedPage == "monthly") {
				loadedMonthlyEyecatch = '';
			} else if (loadedPage == "archives") {
				loadedArchiveEyecatch = '';
			}
		}
		$("div.eye-catch a").removeClass("on");
		$("div.eye-catch a."+type).addClass("on");
		$("div.set a").removeClass("on");
		if (loadedPage == "index") {
			$("#index_eyecatch").val(type);
		} else if (loadedPage == "individual") {
			$("#entry_eyecatch").val(type);
		} else if (loadedPage == "category") {
			$("#category_eyecatch").val(type);
		} else if (loadedPage == "monthly") {
			$("#monthly_eyecatch").val(type);
		} else if (loadedPage == "archives") {
			$("#archive_eyecatch").val(type);
		}
	};

// Set

	function setSet(type) {
		$('#iframe').contents().find('body').removeClass(layoutClass).removeClass(eyeCatchClass);
		if (type == 'set1'){
			$('#iframe').contents().find('body').addClass('multi eye-c set1');
			$("div.layout a").removeClass("on");
			$("div.layout a.multi").addClass("on");
			$("div.eye-catch a").removeClass("on");
			$("div.eye-catch a.eye-c").addClass("on");
			if (loadedPage == "index") {
				loadedIndexStyle = 'multi';
				loadedIndexEyecatch = 'eye-c';
				$("#index_style").val('multi set1');
				$("#index_eyecatch").val('eye-c');
			} else if (loadedPage == "individual") {
				loadedEntryStyle = 'multi';
				loadedEntryEyecatch = 'eye-c';
				$("#entry_style").val('multi set1');
				$("#entry_eyecatch").val('eye-c');
			} else if (loadedPage == "category") {
				loadedCategoryStyle = 'multi';
				loadedCategoryEyecatch = 'eye-c';
				$("#category_style").val('multi set1');
				$("#category_eyecatch").val('eye-c');
			} else if (loadedPage == "monthly") {
				loadedMonthlyStyle = 'multi';
				loadedMonthlyEyecatch = 'eye-c';
				$("#monthly_style").val('multi set1');
				$("#monthly_eyecatch").val('eye-c');
			} else if (loadedPage == "archives") {
				loadedArchiveStyle = 'multi';
				loadedArchiveEyecatch = 'eye-c';
				$("#archive_style").val('multi set1');
				$("#archive_eyecatch").val('eye-c');
			}
		} else if (type == 'set2') {
			$('#iframe').contents().find('body').addClass('multi2 eye-c set2');
			$("div.layout a").removeClass("on");
			$("div.layout a.multi2").addClass("on");
			$("div.eye-catch a").removeClass("on");
			$("div.eye-catch a.eye-c").addClass("on");
			if (loadedPage == "index") {
				loadedIndexStyle = 'multi2';
				loadedIndexEyecatch = 'eye-c';
				$("#index_style").val('multi2 set2');
				$("#index_eyecatch").val('eye-c');
			} else if (loadedPage == "individual") {
				loadedEntryStyle = 'multi2';
				loadedEntryEyecatch = 'eye-c';
				$("#entry_style").val('multi2 set2');
				$("#entry_eyecatch").val('eye-c');
			} else if (loadedPage == "category") {
				loadedCategoryStyle = 'multi2';
				loadedCategoryEyecatch = 'eye-c';
				$("#category_style").val('multi2 set2');
				$("#category_eyecatch").val('eye-c');
			} else if (loadedPage == "monthly") {
				loadedMonthlyStyle = 'multi2';
				loadedMonthlyEyecatch = 'eye-c';
				$("#monthly_style").val('multi2 set2');
				$("#monthly_eyecatch").val('eye-c');
			} else if (loadedPage == "archives") {
				loadedArchiveStyle = 'multi2';
				loadedArchiveEyecatch = 'eye-c';
				$("#archive_style").val('multi2 set2');
				$("#archive_eyecatch").val('eye-c');
			}
		} else if (type == 'set3') {
			$('#iframe').contents().find('body').addClass('double eye-u eye-h');
			$("div.layout a").removeClass("on");
			$("div.layout a.double").addClass("on");
			$("div.eye-catch a").removeClass("on");
			$("div.eye-catch a.eye-u").addClass("on");
			$("div.eye-catch a.eye-h").addClass("on");
			if (loadedPage == "index") {
				loadedIndexStyle = 'double';
				loadedIndexEyecatch = 'eye-u eye-h';
				$("#index_style").val('double');
				$("#index_eyecatch").val('eye-u eye-h');
			} else if (loadedPage == "individual") {
				loadedEntryStyle = 'double';
				loadedEntryEyecatch = 'eye-u eye-h';
				$("#entry_style").val('double');
				$("#entry_eyecatch").val('eye-u eye-h');
			} else if (loadedPage == "category") {
				loadedCategoryStyle = 'double';
				loadedCategoryEyecatch = 'eye-u eye-h';
				$("#category_style").val('double');
				$("#category_eyecatch").val('eye-u eye-h');
			} else if (loadedPage == "monthly") {
				loadedMonthlyStyle = 'double';
				loadedMonthlyEyecatch = 'eye-u eye-h';
				$("#monthly_style").val('double');
				$("#monthly_eyecatch").val('eye-u eye-h');
			} else if (loadedPage == "archives") {
				loadedArchiveStyle = 'double';
				loadedArchiveEyecatch = 'eye-u eye-h';
				$("#archive_style").val('double');
				$("#arcgive_eyecatch").val('eye-u eye-h');
			}
		} else if (type == 'set4') {
			$('#iframe').contents().find('body').addClass('double eye-u eye-hb');
			$("div.layout a").removeClass("on");
			$("div.layout a.double").addClass("on");
			$("div.eye-catch a").removeClass("on");
			$("div.eye-catch a.eye-u").addClass("on");
			$("div.eye-catch a.eye-hb").addClass("on");
			if (loadedPage == "index") {
				loadedIndexStyle = 'double';
				loadedIndexEyecatch = 'eye-u eye-hb';
				$("#index_style").val('double');
				$("#index_eyecatch").val('eye-u eye-hb');
			} else if (loadedPage == "individual") {
				loadedEntryStyle = 'double';
				loadedEntryEyecatch = 'eye-u eye-hb';
				$("#entry_style").val('double');
				$("#entry_eyecatch").val('eye-u eye-hb');
			} else if (loadedPage == "category") {
				loadedCategoryStyle = 'double';
				loadedCategoryEyecatch = 'eye-u eye-hb';
				$("#category_style").val('double');
				$("#category_eyecatch").val('eye-u eye-hb');
			} else if (loadedPage == "monthly") {
				loadedMonthlyStyle = 'double';
				loadedMonthlyEyecatch = 'eye-u eye-hb';
				$("#monthly_style").val('double');
				$("#monthly_eyecatch").val('eye-u eye-hb');
			} else if (loadedPage == "archives") {
				loadedArchiveStyle = 'double';
				loadedArchiveEyecatch = 'eye-u eye-hb';
				$("#archive_style").val('double');
				$("#arcgive_eyecatch").val('eye-u eye-hb');
			}
		}
		$("div.set a").removeClass("on");
		$("div.set a."+type).addClass("on");
	};

// Width

	function setWidth(type) {
		$('#iframe').contents().find('body').removeClass(widthClass);
		$("div.width a").removeClass("on");
		if (type != 'w-clear') {
			$('#iframe').contents().find('body').addClass(type);
			$("div.width a."+type).addClass("on");
			loadedWidth = type;
			$("#fixed_width").val(type);
		} else {
			$("#fixed_width").val('none');
			loadedWidth = '';
		}
	};

// Others

	function setOthers(type) {
		$('#iframe').contents().find('body').removeClass(otherClass).addClass(type);
		$("div.others a").removeClass("on");
		if (type != 'o-clear') {
			$("div.others a."+type).addClass("on");
			loadedOthers = type;
		} else {
			loadedOthers = '';
		}
		if (type == 'gt') {
			$("#navi_on_top").val('1');$("#hide_navi").val('0');$("#left_align").val('0');
		} else if (type == 'gh') {
			$("#navi_on_top").val('0');$("#hide_navi").val('1');$("#left_align").val('0');
		} else if (type == 'al') {
			$("#navi_on_top").val('0');$("#hide_navi").val('0');$("#left_align").val('1');
		} else if (type == 'o-clear') {
			$("#navi_on_top").val('0');$("#hide_navi").val('0');$("#left_align").val('0');
		}
	};

// Tag Cloud

	function setCloud(type) {
		$("div.cloud a").removeClass("on");
		$('#iframe').contents().find('#tagstyle').remove();
		if (type !='none') {
			if ($.browser.msie) {} else {
				$('#iframe').contents().find('head').append('<link rel="stylesheet" type="text/css" href="<mt:var name="blog_url">styles.css" />');
			}
			$('#iframe').contents().find('head').append('<link rel="stylesheet" type="text/css" id="tagstyle" href="<mt:var name="blog_url">themes/vicuna-tagcloud/tagCloud'+type+'.css" />');
			$("div.cloud a.style"+type).addClass("on");
			loadedCloud = type;
		} else {
			$("div.cloud a.none").addClass("on");
			loadedCloud = '';
		}
		$("#cloud_style").val(type);
	};

// Load Page

	function loadPage(page) {
		$('#iframe').attr('src' ,'<mt:var name="static_uri">support/theme_static/mtVicunaSimple/preview/'+page+'.html');
		loadedPage = page;
		$("div.pages a").removeClass("on");
		$("div.layout a").removeClass("on");
		$("div.eye-catch a").removeClass("on");
		if (page == "index") {
			var layout = loadedIndexStyle;
			var eyecatch = loadedIndexEyecatch;
		} else if (page == "individual") {
			var layout = loadedEntryStyle;
			var eyecatch = loadedEntryEyecatch;
		} else if (page == "category") {
			var layout = loadedCategoryStyle;
			var eyecatch = loadedCategoryEyecatch;
		} else if (page == "monthly") {
			var layout = loadedMonthlyStyle;
			var eyecatch = loadedMonthlyEyecatch;
		} else if (page == "archives") {
			var layout = loadedArchiveStyle;
			var eyecatch = loadedArchiveEyecatch;
		}
		$('#iframe').contents().find('body').removeClass(layoutClass).addClass(layout);
		$('#iframe').contents().find('body').removeClass(eyeCatchClass).addClass(eyecatch);
		$("div.pages a."+page).addClass("on");
		$("div.layout a."+layout).addClass("on");
		$("div.eye-catch a."+eyecatch).addClass("on");
	};

// Menu On/Off
	function showmenu(){
//		$("#menu").toggle("slow");
		$(".debug-tool").toggle("slow");
		$("form .actions-bar").toggle("slow");
    };
//]]>
</script>

